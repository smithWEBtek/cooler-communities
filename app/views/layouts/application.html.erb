<!DOCTYPE html>
<html>
  <head>
    <title>Cooler</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <link rel="shortcut icon" href="#" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://surveyjs.azureedge.net/1.0.84/survey.css" type="text/css" rel="stylesheet" />
    <script src="https://surveyjs.azureedge.net/1.0.84/survey.jquery.min.js"></script>

    <%= javascript_include_tag 'application' %>

  </head>

  <body>
    <%= render partial: 'layouts/main_nav' %>
    
    <% if current_user && current_user.admin? %>
      <%= render partial: 'layouts/admin_nav' %>
    <% end %>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>

  <footer><%= render partial: 'layouts/footer' %></footer>
  </body>
</html>
